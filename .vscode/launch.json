    "version": "0.2.0",
    "configurations": [
        {
            "name": "robot-stm32f4",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "stlink",
            "device": "STM32F407VG",
            "interface": "swd",
            "serialNumber": "",
            "liveWatch": {
                "enabled": false,
                "samplesPerSecond": 4
            },
            "stm32cubeprogrammer": "/opt/st/stm32cubeclt_1.17.0/STM32CubeProgrammer/bin",
            "svdFile": "STM32F407.svd",
            "v1": false,
            "showDevDebugOutput": "parsed",
        },
        {
            "name": "robot-linux",
            "cwd": "${workspaceFolder}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "MIMode": "gdb",
        },
        {
            "name": "robot-windows",
            "cwd": "${workspaceFolder}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
        }
    ]
}
